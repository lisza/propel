service cloud.firestore {
  match /databases/{database}/documents {

    function hasCreatedAt() {
      return request.time == resource.data.createdAt;
    }

    function hasUpdatedAt() {
      return request.time == resource.data.updatedAt;
    }

    function ownsDoc() {
      return resource.data.owner == request.auth.uid;
    }

    // Make sure the uid of the requesting user matches the 'author_id' field
    // of the document
    match /notebooks/{nb} {
      allow read: if true;
      allow create: if ownsDoc() && hasCreatedAt();
      allow update: if ownsDoc() && hasUpdatedAt();
    }
  }
}
